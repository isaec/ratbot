{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      /**
      "@": "/src",
      "@commands": "/src/commands",
      "@formatters": "/src/formatters",
      "@helpers": "/src/helpers",
      */
      "@/*": ["src/*"],
      "@commands/*": ["src/commands/*"],
      "@formatters/*": ["src/formatters/*"],
      "@helpers/*": ["src/helpers/*"]
    },
    "target": "esnext",
    "moduleResolution": "node"
  }
}
